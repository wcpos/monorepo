{
  "private": true,
  "name": "@wcpos/monorepo",
  "scripts": {
    "clean": "node scripts/clean-node-modules",
    "main": "pnpm --filter @wcpos/main",
    "main:expo": "pnpm --filter @wcpos/main exec expo",
    "components": "pnpm --filter @wcpos/components",
    "build:main": "turbo build --filter=\"...{./apps/main}\"",
    "preinstall": "pnpm ignored-builds || true"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ]
  },
  "packageManager": "pnpm@10.4.0",
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "fs-xattr",
      "macos-alias",
      "esbuild",
      "keccak",
      "secp256k1",
      "protobufjs",
      "electron",
      "eccrypto",
      "rxdb",
      "rxdb-premium"
    ]
  },
  "resolutions": {
    "flexsearch@0.7.43": "git+https://github.com/wcpos/flexsearch.git#76e53ededf2045867cfe9548f5043e3842acb9ad"
  },
  "dependencies": {
    "turbo": "^2.4.2",
    "typescript": "5.3.3"
  }
}
