{
	"title": "WP Credentials schema",
	"version": 0,
	"description": "WordPress credentials",
	"type": "object",
	"primaryKey": "localID",
	"properties": {
		"localID": {
			"description": "Unique local identifier for the resource. Note: id is not unique for WP User IDs",
			"type": "string",
			"maxLength": 100
		},
		"id": {
			"type": "number"
		},
		"username": {
			"type": "string"
		},
		"first_name": {
			"type": "string"
		},
		"last_name": {
			"type": "string"
		},
		"email": {
			"type": "string"
		},
		"display_name": {
			"type": "string"
		},
		"nice_name": {
			"type": "string"
		},
		"last_access": {
			"type": "string"
		},
		"jwt": {
			"type": "string"
		},
		"wp_nonce": {
			"type": "string"
		},
		"key_id": {
			"type": "number"
		},
		"key_permissions": {
			"type": "string"
		},
		"stores": {
			"type": "array",
			"ref": "stores",
			"items": {
				"type": "string"
			}
		}
	},
	"encrypted": ["jwt"]
}
