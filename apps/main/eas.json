{
  "cli": {
    "appVersionSource": "remote",
    "promptToConfigurePushNotifications": false
  },
  "build": {
    "monorepo": {
      "pnpm": "10.17.0",
      "cache": {
        "key": "turbo",
        "paths": [
          "../../.turbo/cache"
        ]
      },
      "env": {
        "EXPO_USE_FAST_RESOLVER": "true"
      },
      "android": {
        "preInstall": "sudo apt-get update && sudo apt-get install -y libsecret-1-dev"
      }
    },
    "development": {
      "extends": "monorepo",
      "distribution": "internal",
      "developmentClient": true,
      "android": {
        "preInstall": "sudo apt-get update && sudo apt-get install -y libsecret-1-dev",
        "buildType": "apk"
      },
      "ios": {
        "simulator": true
      }
    },
    "production": {
      "extends": "monorepo",
      "distribution": "store",
      "android": {
        "preInstall": "sudo apt-get update && sudo apt-get install -y libsecret-1-dev",
        "buildType": "app-bundle"
      },
      "autoIncrement": true
    },
    "adhoc": {
      "extends": "monorepo",
      "distribution": "internal",
      "android": {
        "preInstall": "sudo apt-get update && sudo apt-get install -y libsecret-1-dev"
      }
    }
  },
  "submit": {
    "production": {
      "android": {
        "track": "beta"
      },
      "ios": {
        "appleId": "paul@kilbot.com.au",
        "ascAppId": "6742204061",
        "appleTeamId": "G7L8G4KJ7A"
      }
    }
  }
}